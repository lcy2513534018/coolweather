<LinearLayout
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    andriod:orientation="vertical"
    andriod:layout_width="match_parent"
    andriod:layout_height="match_parent"
    andriod:background="#fff">
    <RelativeLayout
        andriod:layout_width="match_parent"
        andriod:layout_height="?attr/actionBarSize"
        andriod:background="?attr/colorPrimary">
        <TextView
            andriod:layout_width="wrap_content"
            andriod:layout_height="wrap_content"
            andriod:id="@+id/title_text"
            andriod:layout_centerInParent="true"
            andriod:textColor="#fff"
            andriod:textSize="20sp"/>
        <Button
            andriod:layout_width="25dp"
            andriod:layout_height="25dp"
            andriod:id="@+id/back_button"
            andriod:layout_marginLeft="10dp"
            andriod:layout_alignParentLeft="true"
            andriod:layout_centerVertical="true"
            andriod:background="@drawable/tupian"/>
    </RelativeLayout>
    <ListView
        andriod:layout_width="match_parent"
        andriod:layout_height="match_parent"
        andriod:id="@+id/list_view">

    </ListView>
</LinearLayout>